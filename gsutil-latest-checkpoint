#!/bin/sh
set -e

for model_dir in "$@"
do
  model_dir="$(printf "%s" "$model_dir" | replace '/checkpoint' '' | file-name-as-directory)"

  model_file="$(gsutil cat "${model_dir}checkpoint" | narrow '^model_checkpoint_path:' | rg -o '"(.*?)"' --replace '$1')"
  if [ ! -z "$model_file" ]
  then
    printf "%s%s\n" "$model_dir" "$model_file"
  fi
done
